<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTestApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiTestApp">

    <FlyoutItem Title="Notes"
                Icon="icon_notes.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Add Note"
                Icon="icon_notes.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:NotePage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Monkeys"
                Icon="icon_notes.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:Monkeys}" />
        </Tab>
    </FlyoutItem>
</Shell>
